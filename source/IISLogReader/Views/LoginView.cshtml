@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<IISLogReader.ViewModels.Login.LoginViewModel>
@using IISLogReader.Navigation
@{
    Layout = "Views/Layouts/BasicLayout.cshtml";
    ViewBag.Title = "IISLogReader :: Sign in";
}
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Log in</div>
            <div class="panel-body">
                <form id="frm-login" role="form" action="@Actions.Login.Default">
                    <div id="msg-error" class="alert alert-danger hidden" role="alert">An error occurred.</div>
                    <fieldset>
                        <div class="form-group">
                            <input id="username" class="form-control" placeholder="User name" name="username" type="text" autofocus="" />
                        </div>
                        <div class="form-group">
                            <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="" />
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me" />Remember Me
                            </label>
                        </div>
                        <button id="btn-login" type="button" class="btn btn-primary">Sign in</button>
                    </fieldset>
                    <input id="returnurl" type="hidden" name="returnurl" value="@Model.ReturnUrl" />
                </form>
            </div>
        </div>
    </div><!-- /.col-->
</div><!-- /.row -->

